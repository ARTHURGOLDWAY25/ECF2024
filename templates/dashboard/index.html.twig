{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<style>
    body {
        margin: 0;
        padding: 0;
        background: #0c5464;
        font-family: "Playfair Display", serif;
        height: 100%; /* Ensure body takes full height */
    }

    /* Header section */
    h3 {
        color: white;
    }

    {# top header and display button #}
    .display-and-header{
        display:flex;
        justify-content:space-between;
    }

    /* Centered container */
    .header {
        display: flex;
        justify-content: center; /* Center-aligns the search container */
        margin-top: 40px;
        width: 100%;
    }

    /* Search container with icon */
    .search-container {
        position: relative;
        width: 50%;
    }

    #search-bar {
        width: 100%;
        padding: 10px 40px 10px 20px;
        background-color: #ffffff;
        border-radius: 20px;
    }

    #search-bar::placeholder {
        color: #ccc;
    }

    .fa-magnifying-glass {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        font-size: 20px;
        color: #999;
        cursor: pointer;
    }

    button {
        margin-left: 10px;
        margin-bottom:20px;
        cursor: pointer;
        width: 120px;
        padding: 10px;
        background: #0b5394;
        color: #ffffff;
        border: none;
        letter-spacing: 0.1em;
        font-size: 1em;
        font-family: "Playfair Display", serif;
        transition: background 1s ease;
        margin-top: 10px;
    }

    button:hover {
        background: #fbbe24;
    }

    .navigation-button{
         font-size:11px;
    }

    /* Main container */
    .example-wrapper {
        display: flex;
        flex-direction: column; /* Stack children vertically */
        height: 100%; /* Ensure wrapper takes full height */
    }

    .main-container {
        display: flex;
        flex: 1; /* Fill available space */
        background: #009999; 
        margin-top: 30px; /* You may want to adjust or remove this */
    }

    .side-bar {
        color: white;
        min-width: 20%;
        background: black; 
    }

    .side-bar-content,
    h4 {
        margin-left: 10px;
        width: auto;
        display: flex;
        flex-direction: column;
    }

    h4 {
        letter-spacing: 0.1em;
        text-transform: uppercase;
    }

    #profile-foto{
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin: 20px
    }

    img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        margin: 20px; 
    }

   ul li {
    list-style: none;
    cursor: pointer;
    transition: all 0.5s ease; /* Smooth transition for all properties */
    letter-spacing: 0.1em;
    margin-bottom: 5px;
    padding: 10px 15px; /* Default padding for each item */
    border-radius: 4px; /* Slightly rounded corners for a soft look */
}

    ul li:hover {
        background-color: #999999; /* Light background for hover */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Soft shadow effect */
        width:200px;    
}


    .fa-icon {
        font-size: 1em;
        margin-right: 8px;
    }

    /* Main page user profile dashboard */
   .main-page {
    flex: 1;
    padding: 20px;
    display: flex;
    flex-direction: column; /* Stack items vertically */
    align-items: center; /* Center-align items if needed */
    
    }

     /* Center the header text */
    .main-page header {
        color: white;
        text-transform: capitalize;
        letter-spacing: 0.05em;
        font-size: 2em;
        text-align: center; /* Center-align only the header */
        margin-bottom: 20px; /* Space below header */
    }

   .main-page p{
    text-align: left;
    color: white;
    font-size: 1em;
    width: 100%; /* Make sure paragraph spans full width */
     text-align: justify;
    
    }

{# input fields with labels and submit button  #}
  /* Align the input to the left */
.input-container {
    align-self: flex-start; /* Aligns container to the left within main-page */
    width:100%;
   
}

.group-form{
    display:flex;
    flex-direction:column;
    margin-bottom: 20px;
}

.form_widget{
    margin-top:5px;
    padding:8px;
    width:60%;
}

label{
    color:#ffffff;
    font-size:1.2em
}

#input{
    width:40%;
    padding:8px;
    border: 2px solid #ACAD95;
    margin-top:3px;
}

.user-image{
    display:flex;
    align-items:center;
    flex-direction:column
}

#logout{
    margin-top:390px;
}

{# modal window display css #}

.modal-overlay {
    display:none;
    min-width: 80%;
    height: 80%;
    position: fixed;
    top:15%;
    left: 50%;
    transform:translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.6); /* Semi-transparent background */
    z-index: 9999; /* Ensures the modal is above other content */
    color:white
}

.modal-content h3 {
    margin-top: 10px;
}

.modal-content{
    background: #d9b919;
    padding: 20px;
    border-radius: 8px;
    width: 90%;
    text-align: center;
    position:absolute;
    top:50%;
    left:50%;
    transform:translate(-50%, -50%);
    margin-top:15px
}

.close-modal {
    margin-top: 15px;
    padding: 8px 16px;
    background: #404F54;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.close-modal:hover {
    background: #333; /* Darker shade on hover */
};

{# success message css color #}
.white-icon {
    vertical-align: middle;
    color: white;
}


</style>
{% endblock %}

{% block body %}
<div class="example-wrapper">
    <div class="display-and-header">
         <h3>Welcome to User Profile Dashboard !</h3>
        <button type ="submit" id="display" onClick='displayModal()'>Display</button>
    </div> 

    <div class="header">
        <div class="search-container">
            <input type="text" id="search-bar" placeholder="Search...">
            <i class="fas fa-magnifying-glass"></i>
        </div>
    </div>

    <div class="main-container">
        <div class="side-bar">
            <div class="side-bar-content">
                <div class="user-image">
                    <img src="{{ asset('image/Gate.webp') }}" id="profile-foto" alt=""/><br>
                    <p>Arthur GOLDWAY</p>
                </div>
                <ul class="sidebar-listings">
                    <li><i class="fa-solid fa-gear fa-icon"></i>Account Settings <i class="fa-solid fa-angle-right"></i></li>
                    <li><i class="fa-regular fa-bell fa-icon"></i>Notifications <i class="fa-solid fa-angle-right"></i></li>
                    <li><i class="fa-solid fa-shield-halved fa-icon"></i>Security <i class="fa-solid fa-angle-right"></i></li>
                    <li><i class="fa-solid fa-asterisk fa-icon"></i>Preferences <i class="fa-solid fa-angle-right"></i></li>
                    <li><i class="fa-solid fa-file-invoice-dollar fa-icon"></i>Billing<i class="fa-solid fa-angle-right"></i></li>
                    <li><i class="fa-solid fa-circle-half-stroke fa-icon"></i>Activity Log <i class="fa-solid fa-angle-right"></i></li>
                    <li><i class="fa-solid fa-circle-info fa-icon"></i>Help / Support <i class="fa-solid fa-angle-right"></i></li>
                    <li><i class="fa-brands fa-aws fa-icon"></i>Our services <i class="fa-solid fa-angle-right"></i></li>
                </ul>
            </div>
            <h4>Performance Indicators</h4>
            <div class="activity-indicators">
                <img src="{{ asset('image/activity.jpg') }}" class="activity-image" alt=""/>
                <img src="{{ asset('image/bar-chart.jpg') }}" class="activity-image" alt=""/>
                <img src="{{ asset('image/chart.jpg') }}" class="activity-image" alt=""/>
            </div>

            {# logout button form #}
            <form action="{{ path('app_logout') }}" method="post" id = "logout-form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                <button type="submit" class="btn btn-primary" id="logout">Logout</button>
            </form>
        </div>
        {# end of side bar #}

        <div class="main-page">
            <header>User Profile Dashboard</header>
            <p>The User Profile Dashboard is a streamlined hub for managing essential profile features...</p>
            <div class="button-container">
                <button type="submit" class="navigation-button"> Activity <i class="fas fa-caret-down"></i></button>
                <button type="submit" class="navigation-button">Profile  <i class="fas fa-caret-down"></i></button>
                <button type="submit" class="navigation-button">Progress <i class="fas fa-caret-down"></i></button>
                <button type="submit" class="navigation-button">Notifications <i class="fas fa-caret-down"></i></button>
                <button type="submit" class="navigation-button">Members <i class="fas fa-caret-down"></i></button>
                <button type="submit" class="navigation-button">New Activity <i class="fas fa-caret-down"></i></button>
                <button type="submit" class="navigation-button">Help/Support <i class="fas fa-caret-down"></i></button>
            </div>

            <div class="input-container">
                {{ form_start(form) }}
                    <div class="group-form">
                        {{ form_label(form.fullName, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.fullName, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                      <div class="group-form">
                        {{ form_label(form.Username, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.Username, {'attr': {'class': 'form_widget'}}) }}
                    </div>
                   
                    <div class="group-form">
                        {{ form_label(form.PhoneNumber, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.PhoneNumber, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                     <div class="group-form">
                        {{ form_label(form.DateOfBirth, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.DateOfBirth, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                    <div class="group-form">
                        {{ form_label(form.Address, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.Address, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                    <div class="group-form">
                        {{ form_label(form.City, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.City, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                    <div class="group-form">
                        {{ form_label(form.Zip, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.Zip, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                    <div class="group-form">
                        {{ form_label(form.JobTitle, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.JobTitle, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                    <div class="group-form">
                        {{ form_label(form.CompanyName, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.CompanyName, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                    <div class="group-form">
                        {{ form_label(form.YearsOfExperience, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.YearsOfExperience, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                     <div class="group-form">
                        {{ form_label(form.AboutMe, null, {'attr': {'class': 'form_label'}}) }}
                        {{ form_widget(form.AboutMe, {'attr': {'class': 'form_widget'}}) }}
                    </div>

                    <div class="form-buttons">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                {{ form_end(form) }}
            </div>
            {# success message display#}
           {% for label, messages in app.flashes() %}
                <div class="success-message {{ label|upper }}">
                    {% for message in messages %}
                        <div class="alert alert-success">
                            <span class="material-icons white-icon" style="vertical-align: middle; color:white">
                            check_circle</span>  <span style="color:white;">{{ message }}</span>
                        </div>
                    {% endfor %}
                </div>
           {% endfor %}

        </div>
        {# modal window container #}
            <div class="modal-overlay" onclick="closeModal()">
                <div class="modal-content" onclick="event.stopPropagation()">
                    <h3>User Information</h3>
                    <p><strong>Full Name:</strong> {{ fullName }}</p>
                    <p><strong>Username:</strong> {{ userName }}</p>
                    <p><strong>Phone Number:</strong> {{ phoneNumber }}</p>
                    <p><strong>Job Title:</strong> {{ jobTitle }}</p>
                    <p><strong>About Me:</strong> {{ aboutMe }}</p>
                    <button type="button" class="close-modal" onclick="closeModal()">Close</button>
                </div>
            </div>
        
            {# javascript for close modal button #}
            <script>
                function closeModal (){
                    document.querySelector('.modal-overlay').style.display='none'
                }
            </script>

            {# javascript for display button #}
            <script>
                function displayModal(){
                    document.querySelector('.modal-overlay').style.display = 'block'
                }
            </script>
    </div>
</div>
{% endblock %}





