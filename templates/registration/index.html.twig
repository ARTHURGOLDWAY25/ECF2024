{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
<style>

    body{
        margin:0;
        padding:0;
        background:#8c6c09;
        font-family: "Playfair Display", serif;
    }
    .example-wrapper { 
        min-width:500px;
        padding:20px;
        position:absolute;
        top:50%;
        left:50%;
        transform:translate(-50%, -50%);
        background:#206907;
        color:#ffffff;
        border-radius:6px;
        box-shadow:2px 2px 10px rgba(0, 0, 0, 0.9 );

     }

     h3{
         letter-spacing:0.1em;
     }

     span{
        display:block;
     }

     .form-group{
        display:flex;
        justify-content:space-between;
        align-items:center; 
     }

     label{
        letter-spacing:0.1em;
        font-size:1.1em;
     }

     .form_widget{
        padding:8px;
        width:60%;
        margin-bottom:7px;
        outline: 2px solid #0e2f44;

    }

        button{
        cursor:pointer;
        width:120px;
        padding:10px;
        background: #0b5394;
        color:#ffffff;
        border:none;
        letter-spacing: 0.1em;
        font-size: 1em;
        font-family: "Playfair Display", serif;
        transition: background 1s ease;
        margin-top:10px;

        &:hover{
            background:#fbbe24;
        }
    }
    {# modal-window button #}
    #close-button{
        display:block;
    }
    
</style>

<div class="example-wrapper">
    <h3>Welcome to registration page. <span>Please register to log in !<span></H3>
    {{form_start(form)}}
        <div class="form-group">
            {{ form_label(form.email, null, {"attr": {"class": "form_label"}}) }}
            {{ form_widget(form.email, {"attr": {"class": "form_widget"}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password.first, null, {"attr": {"class": "form_label"}}) }}
            {{ form_widget(form.password.first, {"attr": {"class": "form_widget"}}) }}
        </div>

       <div class="form-group">
            {{ form_label(form.password.second, null, {"attr": {"class": "form_label"}}) }}
            {{ form_widget(form.password.second, {"attr": {"class": "form_widget"}}) }}
        </div>
        <button type="submit">Register</button>

    {{form_end(form)}}

    {# registration modal window display #}
   {% for label, messages in app.flashes() %}
        <div class="modal-window {{ label|lower }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
            <button type="submit" id='close-button' onClick='this;parentElement.style.display="none" '>Close</button>
        </div>
    {% endfor %}
</div>

{% endblock %}
