{% extends 'base.html.twig' %}

{% block title %}Hello UserLoginController!{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
<style>
    body{
        margin:0;
        padding:0;
        background:#384532;
        font-family: "Playfair Display", serif;
    }

    h3, 
    .header, p{
        letter-spacing:0.1em;
        color:#ffffff;
    }

   #span{
    display:block
   }

    .example-wrapper { 
       min-width: 500px;
       padding:20px;
       position:absolute;
       top:50%;
       left:50%;
       transform: translate(-50%, -50%);
       background: #B45F06;
       border-radius:6px;
       box-shadow:2px 2px 10px rgba(0, 0, 0, 0.9 )

    }

    .form-group{
        display:flex;
        justify-content:space-between;
        align-items:center;
    }

    label{
        color:#ffffff;
        letter-spacing:0.1em;
        font-size:1.1em;
        
    }
    .form_widget{
        padding:8px;
        width:60%;
        margin-bottom:7px;
        outline: 2px solid #0e2f44;

    }

    button{
        cursor:pointer;
        width:120px;
        padding:10px;
        background: #0b5394;
        color:#ffffff;
        border:none;
        letter-spacing: 0.1em;
        font-size: 1em;
        font-family: "Playfair Display", serif;
        transition: background 1s ease;
        margin-top:10px;

        &:hover{
            background:#fbbe24;
        }
    }

    a{
        color:blue
    }
   
</style>

<div class="example-wrapper">
    <div class ="header">
        <p class="header-fraction">Welcome to User Login Page! <span id="span">Please enter your credentials to connect. </span></p>
    </div>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email, null, {"attr": {"class": "form_label"}}) }}
            {{ form_widget(form.email, {"attr": {"class": "form_widget"}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password, null, {"attr": {"class": "form_label"}}) }}
            {{ form_widget(form.password, {"attr": {"class": "form_widget"}}) }}
        </div>

        <button type="submit" id="login-button">Log in</button>
        <p>Don't have an account yet?
        <a href = "{{path('app_registration')}}">Register now ! </a> </p>

    {{ form_end(form) }}

    {# Message display window #}
    {% for label, messages in app.flashes() %}
        <div class="modal-window {{ label|lower }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

</div>

{% endblock %}
